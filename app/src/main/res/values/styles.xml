<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/salmon_pink</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/grey_bg</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="android:windowAnimationStyle">@style/DialogTheme</item>
        <item name="android:indeterminateTint">@color/aquamarine</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowEnterAnimation">@anim/dialog_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_out</item>
    </style>

    <style name="BlocklyDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowEnterAnimation">@anim/dialog_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_out</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">@font/msr_900</item>
    </style>

    <style name="StylesDemoTheme" parent="BlocklyVerticalTheme">
        <item name="blockTextSize">13sp</item>
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
     <style name="TextInputLabel" parent="TextAppearance.AppCompat">
         <item name="colorAccent">@color/aquamarine</item>
         <item name="android:textSize">@dimen/text_input_size</item>
         <item name="colorControlNormal">@color/greyish_brown_50</item>
         <item name="colorControlActivated">@color/greyish_brown</item>
     </style>-->

</resources>
